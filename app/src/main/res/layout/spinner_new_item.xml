<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/colorPrimary"
        android:layout_margin="10dp" />

<CheckedTextView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/check_new_item"
    style="?android:attr/spinnerDropDownItemStyle"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:text="+ Novo local +"
    android:textSize="@dimen/text26dp"
    android:fontFamily="@font/encode_sans_bold"
    android:textAlignment="center"
    android:padding="5dp"
    android:background="@drawable/spinner_dropdown_selector"
    android:shadowColor="@android:color/transparent"
    android:textColor="@color/dropdown_textColor"/>
</LinearLayout>
